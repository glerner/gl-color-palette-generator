.default-colors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-top: 10px;
}

.color-field {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.color-field label {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.wp-picker-container {
    margin-top: 5px;
}

fieldset {
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
}

fieldset label {
    display: block;
    margin-bottom: 10px;
}

.description {
    font-style: italic;
    color: #666;
}

/* Responsive Design */
@media screen and (max-width: 782px) {
    .default-colors-grid {
        grid-template-columns: 1fr;
    }

    fieldset label {
        margin-bottom: 15px;
    }
} 
