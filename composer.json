{
    "name": "georgelerner/gl-color-palette-generator",
    "description": "AI-powered color palette generator for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "George Lerner",
            "homepage": "https://website-tech.glerner.com/"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpunit/php-code-coverage": "^9.2",
        "vlucas/phpdotenv": "^5.5",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "yoast/phpunit-polyfills": "^2.0",
        "10up/wp_mock": "^0.5.0",
        "brain/monkey": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "GL_Color_Palette_Generator\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GL_Color_Palette_Generator\\Tests\\": "tests/",
            "GL_Color_Palette_Generator\\Tests\\Bootstrap\\": "tests/bootstrap/",
            "GL_Color_Palette_Generator\\Tests\\Unit\\": "tests/unit/",
            "GL_Color_Palette_Generator\\Tests\\Integration\\": "tests/integration/",
            "GL_Color_Palette_Generator\\Tests\\Providers\\": "tests/providers/",
            "GL_Color_Palette_Generator\\Tests\\API\\": "tests/api/",
            "GL_Color_Palette_Generator\\Tests\\Admin\\": "tests/admin/",
            "GL_Color_Palette_Generator\\Tests\\Color_Management\\": "tests/color-management/"
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit --bootstrap=tests/bootstrap.php --testsuite unit",
        "test:integration": "phpunit --bootstrap=tests/bootstrap.php --testsuite integration",
        "coverage": "phpunit --coverage-html=coverage",
        "coverage:text": "phpunit --coverage-text",
        "prepare-test": "bash bin/install-wp-tests.sh wordpress_test root root localhost latest",
        "phpcs": "phpcs --standard=WordPress",
        "phpcbf": "phpcbf --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
